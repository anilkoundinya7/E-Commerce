{{#extend "layout"}}
  {{#content "body"}}
    <h1>Your Cart</h1>
    {{#if cart.length}}
      <ul class="cart-items">
        {{#each cart}}
          <li>
            <h2>{{this.name}}</h2>
            <p>Quantity: {{this.quantity}}</p>
            <p>Price: ${{this.price}}</p>
            <p>Total: ${{this.total}}</p>
            <form action="/api/cart/remove/{{this.productId}}?_method=DELETE" method="POST">
              <button type="submit">Remove</button>
            </form>
          </li>
        {{/each}}
      </ul>
      <a href="/checkout">Proceed to Checkout</a>
    {{else}}
      <p>Your cart is empty.</p>
    {{/if}}
  {{/content}}
{{/extend}}
